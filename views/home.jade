		- if (bank_notice) {
		span(class="notice yellow")&nbsp;&#9733;&nbsp;
		- }
		span Bank
a(href="/portfolio", data-role="button", data-ajax="false", style="font-family: mill;") Portfolio
a(href="/buy", data-role="button", data-ajax="false", data-ajax="false", style="font-family: mill;") Buy
